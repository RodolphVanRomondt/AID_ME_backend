{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "$id": "http://our.person.com/personNew.schema.json",
    "type": "object",
    "properties": {
        "first_name": {
            "type": "string",
            "minLength": 2,
            "maxLength": 30
        },
        "last_name": {
            "type": "string",
            "minLength": 2,
            "maxLength": 30
        },
        "dob": {
            "type": "string"
        },
        "sex": {
            "type": "string",
            "minLength": 1,
            "maxLength": 1
        },
        "nid": {
            "type": "string"
        }
    },
    "additionalProperties": false,
    "required": [
        "first_name",
        "last_name",
        "dob",
        "sex"
    ]
}